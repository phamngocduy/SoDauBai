@model IEnumerable<ThoiKhoaBieu>

<!-- Content Row -->
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                @item.MaMH - @item.SoTinChi<span>TC</span> (@item.TongSoSV<span>SV</span>)
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Html.ActionLink(item.TenMH, "Index", "SoDauBai", new { id = item.id }, null)
                            </div>
                            <div class="small">Phòng @(item.MaPH): Thứ @(item.ThuKieuSo) tiết @item.TietBD - @(item.TietBD + item.SoTiet - 1)</div>
                            <abbr class="small" title="@item.TenLop">#@item.MaLop</abbr>
                        </div>
                        <div class="col-auto">
                            <a href="@Url.Action("Index", "SoDauBai", new { id = item.id })">
                                <i class="fas fa-folder-open fa-2x text-gray-300"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.Count() == 0)
{
    <img src="~/Content/anh-co-so-3.jpg" style="max-width:100%" />
}
