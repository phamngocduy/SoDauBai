@model PhongDayBu

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            @if (Model.status.HasValue)
            {
                <span>Xin điều chỉnh</span>
            }
            else
            {
                <span>Đăng ký Phòng</span>
            }
        </h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.idTKB)

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.NgayBD, "Ngày dự kiến/ từ ngày", htmlAttributes: new { @class = "control-label col-md-10" })
                    <div class="col-md-10">
                        <div class="input-group date" id="datetimepicker4" data-target-input="nearest">
                            @Html.TextBoxFor(model => model.NgayBD, Model.NgayBD.ToString("dd/MM/yyyy"), new { @class = "form-control datetimepicker-input", data_target = "#datetimepicker4" })
                            <div class="input-group-append" data-target="#datetimepicker4" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.NgayBD, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.GhiChu1, new { @class = "form-control", placeholder = "Ghi chú về ngày, buổi, tiết bắt đầu...", required = true })
                        @Html.ValidationMessageFor(model => model.GhiChu1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Cập nhật" class="btn btn-@(Model.status.HasValue ? "danger" : "success")" /> |
                        <a href="@Url.Action("Index1", new { id = Model.idTKB })" class="btn btn-default">Quay lại</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <link href="~/Content/tempusdominus.min.css" rel="stylesheet" />
    <script src="~/Scripts/moment-locales.js"></script>
    <script src="~/Scripts/tempusdominus.js"></script>
    <script>
        $(function () {
            $('#datetimepicker4').datetimepicker({
                format: 'D/M/YYYY'
            });
        });
    </script>
}
