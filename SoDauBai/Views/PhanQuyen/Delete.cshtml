@model AspNetUser

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Are you sure you want to delete this?</h6>
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>Tài khoản</dt>
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
        </dl>

        @using (Html.BeginForm("Delete", "PhanQuyen", new { id = ViewContext.RouteData.Values["id"] }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.UserName)

            <div class="form-actions no-color">
                <input type="submit" value="Xóa luôn" class="btn btn-danger" /> |
                <a href="@Url.Action("Index", new { id = ViewContext.RouteData.Values["id"] })" class="btn btn-default">Quay lại</a>
            </div>
        }
    </div>
</div>
