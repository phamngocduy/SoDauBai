@model SoGhiBai

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Are you sure you want to delete this?</h6>
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>
                Ngày dạy
            </dt>
            <dd>
                @Model.NgayDay.ToString("d/M/yyyy")
            </dd>

            <dt>
                Thời gian
            </dt>
            <dd>
                @Model.ThoiGianBD.ToString(@"hh\:mm") ~ @Model.ThoiGianKT.ToString(@"hh\:mm")
            </dd>

            <dt>
                Nội dung giảng dạy
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NDGiangDay)
            </dd>

            <dt>
                Số tiết
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SoTietDay)
            </dd>

            <dt>
                Mã phòng
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MaPhong)
            </dd>

            <dt>
                Nhận xét lớp học
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NhanXetSV)
            </dd>

            <dt>
                Tổng số SV
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TongSoSV)
            </dd>

            <dt>
                Đề xuất khác
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DeXuat)
            </dd>

            <dt>
                Người ghi
            </dt>
            <dd>
                <a href="#">@Model.Email</a>
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa luôn" class="btn btn-danger" /> |
                <a href="@Url.Action("Index", new { id = Model.idTKB })" class="btn btn-default">Quay lại</a>
            </div>
        }
    </div>
</div>
